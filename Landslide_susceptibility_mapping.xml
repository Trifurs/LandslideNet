<startParam name="滑坡敏感性制图" language="python" version="cp311" system="win_amd64" description="使用卷积神经网络进行大尺度滑坡敏感性制图">
    <param>
        <name>input_factors_dir</name>
        <description>输入影响因子文件</description>
        <inout>in</inout>
        <type>folder</type>
        <info>20个滑坡影响因子（已归一化）的tif文件所在目录</info>
        <value>D:/lb/myCode/LandslideNet/Data/origin/factors</value>
    </param>
    <param>
        <name>input_labels_dir</name>
        <description>输入标签文件夹</description>
        <inout>in</inout>
        <type>folder</type>
        <info>包含滑坡点（1）和非滑坡点（2）的tif影像，用于制作训练集</info>
        <value>D:/lb/myCode/LandslideNet/Data/origin/label</value>
    </param>
    <param>
        <name>output_factors_dir</name>
        <description>输出训练样本的文件夹</description>
        <inout>out</inout>
        <type>folder</type>
        <info>存放提取出的.npy格式的Patch样本（分train/val）</info>
        <value>D:/lb/myCode/LandslideNet/Data/patches</value>
    </param>
    <param>
        <name>output_labels_dir</name>
        <description>输出训练标签的文件夹</description>
        <inout>out</inout>
        <type>folder</type>
        <info>存放提取出的标签（分train/val）</info>
        <value>D:/lb/myCode/LandslideNet/Data/labels</value>
    </param>
    <param>
        <name>crop_size</name>
        <description>模型输入的Patch尺寸</description>
        <inout>in</inout>
        <type>int</type>
        <info>训练和预测时使用的窗口大小（如512）</info>
        <value>512</value>
    </param>
    <param>
        <name>predict_stride</name>
        <description>预测时的滑动步长</description>
        <inout>in</inout>
        <type>int</type>
        <info>预测时的滑动窗口步长（建议为 crop_size 的 1/2 或 1/4）</info>
        <value>256</value>
    </param>
    <param>
        <name>train_output</name>
        <description>训练日志和权重的输出文件夹</description>
        <inout>out</inout>
        <type>folder</type>
        <info>训练日志和权重的输出文件夹</info>
        <value>D:/lb/myCode/LandslideNet/Result/pth</value>
    </param>
    <param>
        <name>num_epochs</name>
        <description>训练轮数</description>
        <inout>in</inout>
        <type>int</type>
        <info>训练轮数</info>
        <value>100</value>
    </param>
    <param>
        <name>lr</name>
        <description>学习率</description>
        <inout>in</inout>
        <type>float</type>
        <info>学习率</info>
        <value>0.0001</value>
    </param>
    <param>
        <name>device_ids</name>
        <description>GPU编号</description>
        <inout>in</inout>
        <type>list</type>
        <info>模型训练时采用了两张GPU</info>
        <value>[0, 1]</value>
    </param>
    <param>
        <name>patience</name>
        <description>早停耐心参数</description>
        <inout>in</inout>
        <type>int</type>
        <info>早停耐心参数</info>
        <value>20</value>
    </param>
    <param>
        <name>batch_size</name>
        <description>批处理大小</description>
        <inout>in</inout>
        <type>int</type>
        <info>批处理大小</info>
        <value>8</value>
    </param>
    <param>
        <name>num_workers</name>
        <description>数据加载器的工作线程数</description>
        <inout>in</inout>
        <type>int</type>
        <info>数据加载器的工作线程数</info>
        <value>4</value>
    </param>
    <param>
        <name>num_bands</name>
        <description>输入影像的波段数</description>
        <inout>in</inout>
        <type>int</type>
        <info>输入影像的波段数，即影响因子的数目</info>
        <value>20</value>
    </param>
    <param>
        <name>LSM_dir</name>
        <description>滑坡敏感性地图中间结果输出文件夹</description>
        <inout>out</inout>
        <type>folder</type>
        <info>存放多步长预测的临时结果</info>
        <value>D:/lb/myCode/LandslideNet/Result/LSM_temp</value>
    </param>
    <param>
        <name>mosaic_map</name>
        <description>最终融合后的滑坡敏感性地图输出路径</description>
        <inout>out</inout>
        <type>file</type>
        <info>最终结果文件路径</info>
        <value>D:/lb/myCode/LandslideNet/Result/LSM/Final_LSM.tif</value>
    </param>
</startParam>
